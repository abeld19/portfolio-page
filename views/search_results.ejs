<!DOCTYPE html>
<html lang="en">
<head>
    <title>Search Results</title>
    <!-- Link to the main stylesheet -->
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>
<body>
    <h1>Search Results</h1>
    
    <!-- Navigation bar with links to different sections of the site -->
    <nav class="navigation">
      <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/myproject">Works</a></li>    
          <li><a href="/contacts">Contacts</a></li>
     
      </ul>
      <!-- Search form to search through works -->
      <form action="/search" method="POST" class="search-form">
        <input type="text" name="query" placeholder="Search my works...">
        <button type="submit">Search</button>
      </form>
    </nav>
    
    <!-- Display search results if any -->
    <% if (results && results.length > 0) { %>
        <ul>
            <% results.forEach(result => { %>
                <li>
                    <h2><%= result.name %></h2>
                    <p><%= result.description %></p>
                    <p>Features: <%= result.features %></p>
                    <p>Technologies Used: <%= result.technology %></p>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <!-- Message displayed if no results are found -->
        <p>No results found.</p>
    <% } %>
</body>
</html>
